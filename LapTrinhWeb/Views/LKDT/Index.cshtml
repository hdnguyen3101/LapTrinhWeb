                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="main">
        <div class="content">
            <div class="content_top">
                <div class="heading">
                    <h3>Sản Phẩm Mới</h3>
                </div>
               
                <div class="clear"></div>
            </div>
            <div class="section group">
                @foreach (var spmoi in Model)
                {
                    <div class="grid_1_of_4 images_1_of_4" style="width:250px;height:200px">
                        <a href="@Url.Action("Chitiet", "LKDT", new { id = spmoi.MaSP })">
                            <img src="~/Images/@spmoi.Anhbia" alt="@spmoi.TenSP" style="max-height:100px"/>
                            <h2>@spmoi.TenSP </h2>
                            <div class="price-details">
                                <div class="price-number">
                                    <p><span class="rupees">@spmoi.Giaban đ</span></p>
                                </div>
                                <div class="clear"></div>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
