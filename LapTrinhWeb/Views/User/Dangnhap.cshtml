
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="header_slide">
    <div class="header_bottom_right">
        <div class="content">
            <table align="center">
                <h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
                <h3 style="color:red; padding:20px">Đăng Nhập</h3>
                @using (Html.BeginForm())
                {
                    
                    @Html.ValidationSummary(true)
                    <tr style="height:40px">
                        <td>Tên đăng nhập</td>
                        <td>
                            @Html.TextBox("TenDN")
                            @ViewData["Loi1"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Mật Khẩu</td>
                        <td>
                            @Html.Password("Matkhau");
                            @ViewData["Loi2"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td></td>
                        <td>
                            <input type="submit" value="Đăng nhập" />
                        </td>
                    </tr>
                   <tr>
                       Nếu bạn chưa có tài khoản vui lòng nhấn vào đây để đăng ký ->@Html.ActionLink("Đăng ký", "Dangky", "User");
                   </tr>
                }
                
            </table>
        </div>
    </div>
</div>
